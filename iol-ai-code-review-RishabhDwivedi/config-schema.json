{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Code Review Configuration",
  "description": "Configuration schema for the AI Code Reviewer",
  "type": "object",
  "properties": {
    "ignore_patterns": {
      "type": "array",
      "description": "List of file/directory patterns to ignore during review",
      "items": {
        "type": "string"
      },
      "default": [
        "*.md",
        "*.txt",
        "*.json",
        "*.yaml",
        "*.yml",
        "node_modules/**",
        "venv/**",
        "dist/**",
        "build/**",
        "__pycache__/**",
        ".git/**"
      ]
    },
    "focus_areas": {
      "type": "object",
      "description": "Enable or disable specific review focus areas",
      "properties": {
        "code_quality": {
          "type": "boolean",
          "default": true
        },
        "security": {
          "type": "boolean",
          "default": true
        },
        "performance": {
          "type": "boolean",
          "default": true
        },
        "best_practices": {
          "type": "boolean",
          "default": true
        },
        "documentation": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "block_pr_on": {
      "type": "string",
      "description": "Minimum severity level to block PR",
      "enum": ["none", "suggestion", "warning", "critical"],
      "default": "critical"
    },
    "max_comments": {
      "type": "integer",
      "description": "Maximum number of comments to post per PR",
      "minimum": 1,
      "maximum": 200,
      "default": 50
    },
    "llm": {
      "type": "object",
      "description": "LLM provider configuration",
      "properties": {
        "provider": {
          "type": "string",
          "description": "LLM provider to use",
          "enum": ["openai", "anthropic", "azure_openai"],
          "default": "openai"
        },
        "model": {
          "type": "string",
          "description": "Model name/identifier",
          "default": "gpt-4"
        },
        "temperature": {
          "type": "number",
          "description": "Temperature for model responses (0-1)",
          "minimum": 0,
          "maximum": 1,
          "default": 0.3
        },
        "max_tokens": {
          "type": "integer",
          "description": "Maximum tokens per API call",
          "minimum": 100,
          "maximum": 8000,
          "default": 2000
        }
      },
      "required": ["provider", "model"],
      "additionalProperties": false
    },
    "checks": {
      "type": "object",
      "description": "Enable or disable specific security and quality checks",
      "properties": {
        "sql_injection": {
          "type": "boolean",
          "default": true
        },
        "xss_vulnerabilities": {
          "type": "boolean",
          "default": true
        },
        "hardcoded_secrets": {
          "type": "boolean",
          "default": true
        },
        "insecure_dependencies": {
          "type": "boolean",
          "default": true
        },
        "code_smells": {
          "type": "boolean",
          "default": true
        },
        "anti_patterns": {
          "type": "boolean",
          "default": true
        },
        "memory_leaks": {
          "type": "boolean",
          "default": true
        },
        "n_plus_one_queries": {
          "type": "boolean",
          "default": true
        },
        "missing_error_handling": {
          "type": "boolean",
          "default": true
        },
        "unused_imports": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": true
    },
    "custom_guidelines": {
      "type": "string",
      "description": "Custom coding guidelines or rules to enforce",
      "default": ""
    }
  },
  "additionalProperties": false
}
